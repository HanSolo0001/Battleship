@model Battleship.Models.PlacePiecesViewModel

@{
    ViewBag.Title = "Place Pieces";
}

<div class="col-md-6" id="form">
    @using (Html.BeginForm())
    {

        // Iterate through the Ship pieces and display their names, and choose the X, Y, and orientation values for placement of the ship pieces
        @Html.HiddenFor(m => m.GameId)
        for (int i = 0; i < Model.Pieces.Count; i++)
        {
            <h3>Place @Model.Pieces[i].Name</h3>
            //TODO find an HTML way to do this
            <div class="col-md-6" id="form">
                X: @Html.TextBoxFor(m => m.Pieces[i].X)
                Y: @Html.TextBoxFor(m => m.Pieces[i].Y)
            </div>
            <br />
            // Show Ship Orientation through a drop down list
            <div class="col-md-6" id="form">
                @Html.EnumDropDownListFor(m => m.Pieces[i].Orientation,  new { @class = "form-control" })
            </div>
        }

        @Html.ValidationSummary()
        <input type="submit" value="Place Pieces" />
    }
</div>
<div class="col-md-6" id="grid-image">
    <img src="~/Images/10X10GRID_Battleship.jpg" />
</div>